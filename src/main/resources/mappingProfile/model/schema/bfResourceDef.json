{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Bibframe resource mapping definition",
  "type": "object",
  "properties": {
    "typeSet": {
      "type": "array",
      "uniqueItems": true,
      "description": "Bibframe resource type set",
      "items": {
        "type": "string"
      }
    },
    "partialTypesMatch": {
      "type": "boolean",
      "default": false,
      "description": "Indicates if it's enough for the type set to match partially"
    },
    "ignoreTypesMatch": {
      "type": "boolean",
      "default": false,
      "description": "Indicates if type set match should not be checked"
    },
    "predicate": {
      "type": "string",
      "description": "Bibframe resource predicate"
    }
  }
}
