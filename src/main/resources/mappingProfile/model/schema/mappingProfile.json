{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Linked Data RDF4LD Library mapping profile definition",
  "type": "object",
  "properties": {
    "typeIri": {
      "type": "string",
      "description": "Type property IRI"
    },
    "topBfTypeSet": {
      "type": "array",
      "uniqueItems": true,
      "description": "Top Bibframe resource type set",
      "items": {
        "type": "string"
      }
    },
    "topBfNameSpace": {
      "type": "string",
      "description": "Top Bibframe resource name space"
    },
    "topLdDef": {
      "$ref": "ldResourceDef.json",
      "description": "Top LinkedData resource definition"
    },
    "topMapping": {
      "$ref": "resourceMapping.json",
      "description": "Top resource mapping"
    }
  }
}
